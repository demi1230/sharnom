{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "types": ["node"],
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/generated/**/*",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "../sharnom-web/**/*",
    "**/*.tsx" 
  ],
  "references": [
    {
      "path": "../../libs/contracts/tsconfig.lib.json"
    }
  ]
}
